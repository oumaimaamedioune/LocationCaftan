<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6FB">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCaftans"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/btnAdmin"
        android:layout_marginBottom="70dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdmin"
        android:layout_width="120dp"
        android:layout_height="50dp" android:text="ADMIN"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:backgroundTint="#FF80AB" android:textColor="#FFFFFF"
        app:cornerRadius="16dp" android:elevation="8dp"/>
</RelativeLayout>